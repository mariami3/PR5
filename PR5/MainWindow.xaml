<Window x:Class="PR5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR5"
        mc:Ignorable="d"
        Title="Authorization" Height="350" Width="500">
    <Grid>
        <DataGrid x:Name="Cinema" Background="#FFC5D0D9" BorderBrush="#FF7292B1"/>
        <TextBox HorizontalAlignment="Center" Margin="0,106,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="298" Height="31" x:Name="login" BorderBrush="#FF090909" />
        <PasswordBox HorizontalAlignment="Center" VerticalAlignment="Top" Width="298" Height="31" x:Name="password" Margin="0,187,0,0"  BorderBrush="#FF090909"/>
        <Button Content="Авторизоваться" HorizontalAlignment="Center" Margin="0,253,0,0" VerticalAlignment="Top" Height="40" Width="228" Click="Button_Click" Background="#FFD9E7ED" BorderBrush="#FF0F0F0F"/>
        <Label Content="Введите логин:" Margin="194,72,0,0" VerticalAlignment="Top" Width="152" FontSize="14" HorizontalAlignment="Left"/>
        <Label Content="Введите пароль:" HorizontalAlignment="Left" Margin="194,0,0,0" VerticalAlignment="Center" Width="152" FontSize="14"/>

    </Grid>
</Window>
